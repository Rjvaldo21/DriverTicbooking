<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_bg"
                    android:text="Destination Address"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@android:color/white"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ivMapIcon"/>

                <ImageView
                    android:id="@+id/ivMapIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/ic_map"
                    android:contentDescription="View on Map" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivChevron"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_chevron_down"
                android:contentDescription="Expand/Collapse" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/date_ic"/>

            <TextView
                android:id="@+id/tvPurpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="txtPurpose"
                android:textSize="13sp"
                android:fontFamily="@font/inter_semibold"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvStatus"/>

            <TextView
                android:id="@+id/tvStatus"
                android:text="Approved"
                android:fontFamily="@font/inter_semibold"
                android:background="@drawable/green_bg"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:padding="3dp"
                app:layout_constraintStart_toEndOf="@id/tvPurpose"
                app:layout_constraintEnd_toEndOf="parent"/>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detailsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/llStartDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/gray999"
                    android:textSize="11sp"
                    android:text="Loron"/>

                <TextView
                    android:id="@+id/tvStartDatesAlt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="txtStartDate"
                    android:fontFamily="@font/inter"
                    android:textSize="11sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llStartTimes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@id/llStartDates"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/gray999"
                    android:textSize="11sp"
                    android:text="Komesa"/>

                <TextView
                    android:id="@+id/tvStartTimesAlt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="txtStartTime"
                    android:fontFamily="@font/inter"
                    android:textSize="11sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/expandableSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="8dp">

            <!-- Data Komesa & Data Remata -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:id="@+id/llStartDate"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvStartDateLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Komesa"
                        android:textSize="11sp"
                        android:textColor="@color/gray999"
                        android:fontFamily="@font/inter"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tvStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07/09/2025"
                        android:textSize="11sp"
                        android:fontFamily="@font/inter"
                        app:layout_constraintStart_toStartOf="@id/tvStartDateLabel"
                        app:layout_constraintTop_toBottomOf="@id/tvStartDateLabel"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintStart_toEndOf="@id/llStartDate"
                    android:layout_marginStart="45dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvEndDateLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Data Remata"
                        android:textSize="11sp"
                        android:textColor="@color/gray999"
                        android:fontFamily="@font/inter"
                        app:layout_constraintStart_toEndOf="@id/tvStartDateLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="8dp"
                        tools:ignore="NotSibling" />

                    <TextView
                        android:id="@+id/tvEndDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09/09/2025"
                        android:textSize="11sp"
                        android:fontFamily="@font/inter"
                        app:layout_constraintStart_toStartOf="@id/tvEndDateLabel"
                        app:layout_constraintTop_toBottomOf="@id/tvEndDateLabel"
                        android:layout_marginTop="4dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Oras Komesa & Oras Remata -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:id="@+id/llStartTime"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- Label Oras Komesa -->
                    <TextView
                        android:id="@+id/tvStartTimeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oras Komesa"
                        android:textSize="11sp"
                        android:textColor="@color/gray999"
                        android:fontFamily="@font/inter"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <!-- Isi Oras Komesa -->
                    <TextView
                        android:id="@+id/tvStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08:00"
                        android:textSize="11sp"
                        android:fontFamily="@font/inter"
                        app:layout_constraintStart_toStartOf="@id/tvStartTimeLabel"
                        app:layout_constraintTop_toBottomOf="@id/tvStartTimeLabel"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

                <!-- Label Oras Remata -->
                <TextView
                    android:id="@+id/tvEndTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oras Remata"
                    android:textSize="11sp"
                    android:textColor="@color/gray999"
                    android:fontFamily="@font/inter"
                    app:layout_constraintStart_toEndOf="@id/llStartTime"
                    android:layout_marginStart="45dp"
                    app:layout_constraintTop_toTopOf="parent"/>

                <!-- Isi Oras Remata -->
                <TextView
                    android:id="@+id/tvEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:30"
                    android:textSize="11sp"
                    android:fontFamily="@font/inter"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintStart_toStartOf="@id/tvEndTimeLabel"
                    app:layout_constraintTop_toBottomOf="@id/tvEndTimeLabel"
                    android:layout_marginTop="4dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!-- Rekerente & Departamentu -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="116dp" />

                <LinearLayout
                    android:id="@+id/llStartDepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvRequesterLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rekerente"
                        android:textSize="11sp"
                        android:textColor="@color/gray999"
                        android:fontFamily="@font/inter"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tvRequesterName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rivaldo Jose"
                        android:textSize="11sp"
                        android:fontFamily="@font/inter"
                        app:layout_constraintStart_toStartOf="@id/tvRequesterLabel"
                        app:layout_constraintTop_toBottomOf="@id/tvRequesterLabel"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvDepartementLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Departamentu"
                        android:textSize="11sp"
                        android:textColor="@color/gray999"
                        android:fontFamily="@font/inter"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toEndOf="@id/llStartDepartment"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tvDepartement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aplikasaun"
                        android:textSize="11sp"
                        android:fontFamily="@font/inter"
                        app:layout_constraintStart_toStartOf="@id/tvDepartementLabel"
                        app:layout_constraintTop_toBottomOf="@id/tvDepartementLabel"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvDescriptionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deskrisaun"
                    android:textSize="11sp"
                    android:textColor="@color/gray999"
                    android:fontFamily="@font/inter"
                    app:layout_constraintStart_toStartOf="@id/guidelineDescription"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Deskripsaun Viajen"
                    android:textSize="11sp"
                    android:fontFamily="@font/inter"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@+id/tvDescriptionLabel"
                    app:layout_constraintStart_toStartOf="@+id/tvDescriptionLabel"
                    app:layout_constraintTop_toBottomOf="@id/tvDescriptionLabel"
                    android:layout_marginTop="4dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Motorista & Deskripsi -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvDriverLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Motorista"
                    android:textSize="11sp"
                    android:textColor="@color/gray999"
                    android:fontFamily="@font/inter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tvDriverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textSize="11sp"
                    android:fontFamily="@font/inter"
                    app:layout_constraintStart_toStartOf="@id/tvDriverLabel"
                    app:layout_constraintTop_toBottomOf="@id/tvDriverLabel"
                    android:layout_marginTop="4dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

             </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
