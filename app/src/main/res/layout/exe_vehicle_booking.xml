<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Bar: Destination + Map + Chevron -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_bg"
                    android:text="Destination Address"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@android:color/white"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageView
                    android:id="@+id/ivMapIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/ic_map"
                    android:contentDescription="View on Map" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivChevron"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_chevron_down"
                android:contentDescription="Expand/Collapse" />
        </LinearLayout>

        <!-- Purpose & Status -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/date_ic" />

            <TextView
                android:id="@+id/tvPurpose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="txtPurpose"
                android:textSize="13sp"
                android:fontFamily="@font/inter_semibold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approved"
                android:fontFamily="@font/inter_semibold"
                android:background="@drawable/green_bg"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:layout_marginStart="5dp"
                android:padding="3dp" />
        </LinearLayout>

        <!-- Expandable Section Placeholder (Use included layout or ViewStub if dynamic) -->
        <LinearLayout
            android:id="@+id/expandableSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="8dp">

            <!-- Additional details like start/end dates, requester, etc. -->
            <!-- You can convert the rest of your ConstraintLayout sections into horizontal LinearLayouts here -->
            <!-- For side-by-side label + value, use weight-based layout inside a horizontal LinearLayout -->

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
